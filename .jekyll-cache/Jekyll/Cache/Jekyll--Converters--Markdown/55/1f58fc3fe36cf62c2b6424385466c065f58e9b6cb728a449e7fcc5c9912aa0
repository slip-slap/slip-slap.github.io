		<span class="n">memcpy</span><span class="p">(</span><span class="n">m_Data</span><span class="p">,</span><span class="n">data</span><span class="p">,</span><span class="n">m_Size</span><span class="p">);</span>
	<span class="p">}</span>

	<span class="n">String</span><span class="p">(</span><span class="k">const</span> <span class="n">String</span><span class="o">&amp;</span> <span class="n">str</span><span class="p">)</span>
	<span class="p">{</span>
