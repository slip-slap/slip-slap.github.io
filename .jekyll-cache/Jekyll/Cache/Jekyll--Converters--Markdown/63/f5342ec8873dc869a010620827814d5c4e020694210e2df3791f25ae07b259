<h4 id="1-taylor-series">1. Taylor Series</h4>

<div class="language-cpp highlighter-rouge"><div class="highlight"><pre class="highlight"><code><span class="cp">#define _USE_MATH_DEFINES
#include&lt;iostream&gt;
#include&lt;cmath&gt;
</span>
<span class="kt">float</span> <span class="nf">power</span><span class="p">(</span><span class="kt">float</span> <span class="n">x</span><span class="p">,</span> <span class="kt">int</span> <span class="n">n</span><span class="p">)</span>
<span class="p">{</span>
	<span class="k">if</span><span class="p">(</span><span class="n">n</span><span class="o">==</span><span class="mi">0</span><span class="p">){</span><span class="k">return</span> <span class="mi">1</span><span class="p">;}</span>
	<span class="k">return</span> <span class="n">x</span><span class="o">*</span><span class="n">power</span><span class="p">(</span><span class="n">x</span><span class="p">,</span><span class="n">n</span><span class="o">-</span><span class="mi">1</span><span class="p">);</span>
<span class="p">}</span>

<span class="kt">float</span> <span class="nf">factor</span><span class="p">(</span><span class="kt">int</span> <span class="n">n</span><span class="p">)</span>
<span class="p">{</span>
	<span class="k">if</span><span class="p">(</span><span class="n">n</span><span class="o">==</span><span class="mi">0</span><span class="p">){</span><span class="k">return</span> <span class="mi">1</span><span class="p">;}</span>
	<span class="k">return</span> <span class="n">n</span><span class="o">*</span><span class="n">factor</span><span class="p">(</span><span class="n">n</span><span class="o">-</span><span class="mi">1</span><span class="p">);</span>
<span class="p">}</span>

<span class="kt">float</span> <span class="nf">taylor_series</span><span class="p">(</span><span class="kt">float</span> <span class="n">x</span><span class="p">,</span><span class="kt">int</span> <span class="n">n</span><span class="p">)</span>
<span class="p">{</span>
	<span class="k">if</span><span class="p">(</span><span class="n">n</span><span class="o">==</span><span class="mi">0</span><span class="p">){</span><span class="k">return</span> <span class="mi">1</span><span class="p">;}</span>
	<span class="k">return</span> <span class="n">power</span><span class="p">(</span><span class="n">x</span><span class="p">,</span><span class="n">n</span><span class="p">)</span><span class="o">/</span><span class="n">factor</span><span class="p">(</span><span class="n">n</span><span class="p">)</span><span class="o">+</span><span class="n">taylor_series</span><span class="p">(</span><span class="n">x</span><span class="p">,</span><span class="n">n</span><span class="o">-</span><span class="mi">1</span><span class="p">);</span>
<span class="p">}</span>

<span class="kt">int</span> <span class="nf">main</span><span class="p">()</span>
<span class="p">{</span>
	<span class="kt">float</span> <span class="n">power_result</span> <span class="o">=</span> <span class="n">power</span><span class="p">(</span><span class="n">M_E</span><span class="p">,</span><span class="mi">0</span><span class="p">);</span>
	<span class="kt">int</span> <span class="n">factor_result</span>  <span class="o">=</span> <span class="n">factor</span><span class="p">(</span><span class="mi">1</span><span class="p">);</span>
	<span class="n">std</span><span class="o">::</span><span class="n">cout</span><span class="o">&lt;&lt;</span><span class="s">"power result is "</span><span class="o">&lt;&lt;</span><span class="n">power_result</span>
		   	<span class="o">&lt;&lt;</span><span class="s">"factor result is "</span><span class="o">&lt;&lt;</span><span class="n">factor_result</span><span class="p">;</span>

	<span class="kt">float</span> <span class="n">taylor_resulst</span><span class="o">=</span><span class="n">taylor_series</span><span class="p">(</span><span class="mi">3</span><span class="p">,</span><span class="mi">25</span><span class="p">);</span><span class="c1">//e^3</span>
	<span class="n">std</span><span class="o">::</span><span class="n">cout</span><span class="o">&lt;&lt;</span><span class="s">"taylorresult is "</span><span class="o">&lt;&lt;</span><span class="n">M_E</span><span class="p">;</span>
	<span class="n">std</span><span class="o">::</span><span class="n">cout</span><span class="o">&lt;&lt;</span><span class="s">"taylorresult is "</span><span class="o">&lt;&lt;</span><span class="n">taylor_resulst</span><span class="p">;</span>
<span class="p">}</span>


