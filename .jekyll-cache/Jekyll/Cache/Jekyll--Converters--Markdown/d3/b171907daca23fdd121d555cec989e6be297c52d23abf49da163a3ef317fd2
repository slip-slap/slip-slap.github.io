<span class="n">mnist_dataset</span> <span class="o">=</span> <span class="n">openml</span><span class="p">.</span><span class="n">datasets</span><span class="p">.</span><span class="n">get_dataset</span><span class="p">(</span><span class="mi">554</span><span class="p">)</span>
