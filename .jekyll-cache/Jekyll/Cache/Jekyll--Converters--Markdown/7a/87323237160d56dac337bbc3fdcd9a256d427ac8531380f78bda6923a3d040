				<span class="n">std</span><span class="o">::</span><span class="n">cout</span><span class="o">&lt;&lt;</span><span class="s">"*"</span><span class="p">;</span>
			<span class="p">}</span><span class="k">else</span>
			<span class="p">{</span>
				<span class="n">std</span><span class="o">::</span><span class="n">cout</span><span class="o">&lt;&lt;</span><span class="s">" "</span><span class="p">;</span>
			<span class="p">}</span>

		<span class="p">}</span>
